    <div id = "full-form">
        <form class="login-form" action="/create/add-template" method="POST" enctype = "multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input name="title" id="title" type = 'string'></input>
            </div>
            <div class= "form-control">
                <label for = "banner">Banner</label>
                <input type = "file" name = 'banner' id = "banner"></input>
            </div>
            <div class= "form-control">
                <label for = "category">Category</label>
                <select name="category" id="category">
                   <%for (let category of categories) {%>
                    <option value="<%=category._id%>"><%=category.title%></option>
                    <%}%>
                </select>
            </div>
           
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="7"></textarea>
            </div> 
